<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <% categories = [['Chinese', 'chinese'], ['Italian', 'italian'], ['Japanese', 'japanese'], ['French', 'french'], ['Belgian', 'belgian']] %>
  <%= f.label :category %>
  <%= f.select :category, categories %>
  <%= f.input :phone_number %>
  <%= f.submit %>
<% end %>

